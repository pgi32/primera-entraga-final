-- Usar esquema
    USE CLUB_DE_ACROBACIA;

-- Creacion de tablas
CREATE TABLE CLASES (
CLASE VARCHAR (60) NOT NULL,
HORARIO TIME NOT NULL,
FECHA DATE NOT NULL,
PROFESOR VARCHAR (60) NOT NULL
);
 -- Creacion de llave primaria de CLASES
    ALTER TABLE CLASES ADD CONSTRAINT PK_CLASE PRIMARY KEY(CLASE);
    
     -- Creacion de llave foranea que apunta a la tabla PROFESORES
      ALTER TABLE CLASES ADD CONSTRAINT FK1_CLASES FOREIGN KEY (PROFESOR)
        REFERENCES PROFESOR (PROFESOR);
     
CREATE TABLE PRECIOS (
PRECIO_DE_CLASE FLOAT NOT NULL ,
CANTIDAD_DE_CLASES INT NOT NULL,
PRECIO_SEMINARIO FLOAT NOT NULL
);
 -- Creacion de llave primaria de grado
    ALTER TABLE PRECIOS ADD CONSTRAINT PK_PRECIOS PRIMARY KEY (PRECIO_DE_CLASE);
    ALTER TABLE PRECIOS ADD CONSTRAINT PK_PRECIOS PRIMARY KEY(PRECIO_DE_SEMINARIO);
 
CREATE TABLE PROFESORES(
NOMBRE VARCHAR (60) NOT NULL,
DNI INT NOT NULL,
EMAIL VARCHAR (60) NOT NULL,
CLASE VARCHAR (60) NOT NULL,
TEL INT NOT NULL
);

 -- Creacion de llave primaria de CLASES
    ALTER TABLE PROFESORES ADD CONSTRAINT PK_PROFESORES PRIMARY KEY(NOMBRE);

  -- Creacion de llave foranea que apunta a la tabla CURSOS
  ALTER TABLE PROFESORES ADD CONSTRAINT FK1_PROFESORES FOREIGN KEY (CLASE)
        REFERENCES CLASE (CALSE);
        
CREATE TABLE SEMINARIOS (
FECHA DATE NOT NULL,
HORARIO TIME NOT NULL,
PROFESOR VARCHAR (60) NOT NULL,
PRECIO FLOAT NOT NULL
);
 -- Creacion de llave foranea que apunta a la tabla SEMINARIOS
 ALTER TABLE SEMINARIOS ADD CONSTRAINT FK1_SEMINARIOS FOREIGN KEY (PROFESOR)
 REFERENCES PROFESORES (NOMBRE);
 ALTER TABLE SEMINARIOS ADD CONSTRAINT FK2_SEMINARIOS FOREIGN KEY (PRECIO)
 REFERENCES PRECIOS (PRECIOS_SEMINARIOS);
 
 CREATE TABLE ALUMNOS (
 NOMBRE VARCHAR (60) NOT NULL PRIMARY KEY,
 DNI INT NOT NULL,
 TEL INT NOT NULL,
 EMAIL VARCHAR (60)NOT NULL,
 CLASE VARCHAR (60) NOT NULL,
 PROFESOR VARCHAR (60) NOT NULL
 );
 
  -- Creacion de llave foranea que apunta a la tabla ALUMNOS
  ALTER TABLE ALUMNOS ADD CONSTRAINT FK1_ALUMNOS FOREIGN KEY (CLASE)
  REFERENCES CLASES (CLASE);
  ALTER TABLE ALUMNOS ADD CONSTRAINT FK2_ALUMNOS FOREIGN KEY (PROFESOR)
  REFERENCES PROFESORES (NOMBRE);
